      "BookCreateDto": {
        "required": [
          "author",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "minLength": 1,
            "type": "string"
          },
          "author": {
            "minLength": 1,
            "type": "string"
          },
          "publicationYear": {
            "maximum": 2025,
            "minimum": 1000,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "BookUpdateDto": {
        "required": [
          "author",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "minLength": 1,
            "type": "string"
          },
          "author": {
            "minLength": 1,
            "type": "string"
          },
          "publicationYear": {
            "maximum": 2025,
            "minimum": 1000,
